<resources>
    <!-- Base application theme. -->
    <style name="Theme.Csci571assignment9" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="title">Yelp</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF0000</item>
        <item name="colorPrimaryVariant">#FF0000</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FF0000</item>
        <item name="colorSecondaryVariant">#FF0000</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:datePickerDialogTheme">@style/DatePicker</item>
        <item name="android:timePickerDialogTheme">@style/TimePicker</item>
    </style>

    <style name="Theme.Toolbar" parent="Theme.Csci571assignment9">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="DatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#00d9bc</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerTheme.ButtonBarButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerTheme.ButtonBarButtonStyle</item>
    </style>

    <style name="TimePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#00d9bc</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerTheme.ButtonBarButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerTheme.ButtonBarButtonStyle</item>
    </style>

    <style name="DatePickerTheme.ButtonBarButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#FF0000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>